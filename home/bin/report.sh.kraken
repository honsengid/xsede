#!/bin/bash

module list
module unload python
module unload PrgEnv-pgi
module load PrgEnv-gnu
module load python/2.7.1-cnl
SUITE=`basename $PWD`
mkdir -p html
export MPLCONFIGDIR=$SCRATCHDIR/code/stagyy_report/paths/matplotlib
export PYTHON_EGG_CACHE=$SCRATCHDIR/code/stagyy_report/paths/python-eggs
export PYTHONPATH=$SCRATCHDIR/code/stagyy_report/bin:$PYTHONPATH
$HOME/stagyy_report/bin/report.py -v -s $SCRATCHDIR/models/$SUITE/ -r $SCRATCHDIR/reports/$SUITE/html
